                    <i class="fa fa-gift"></i>Purchase Medicine
                </div>

                <div class="tools">
                    <a href="javascript:;" class="collapse" data-original-title="" title="">
                    </a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="form-horizontal">

                    <div class="row">
                        <div class="col-md-12">
                            <div class="portlet light bordered">
                                <div class="portlet-title">
                                    <div class="row">
                                        <div class="col-lg-4">
                                            <div class="caption font-green-sharp">
                                                <i class="icon-speech font-green-sharp"></i>
                                                <span class="caption-subject bold uppercase" style="font-weight:bold; font-size:16px;"> Product Medicine Details</span>

                                            </div>
                                        </div>
                                        <div class="col-lg-8">
                                            <div class="row">
                                                <div class="form-group">
                                                    <div class="col-md-7">
                                                        <a class="btn btn-warning selectMedicine" data-toggle="modal" href="#directPurchaseMedicineModal" id="selectMedicine">
                                                            <i class="fa  fa-check-square-o"></i>
                                                            <b>Select Medicine</b>
                                                        </a>
                                                    </div>
                                                    <label class="col-md-5"></label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="portlet-body">


                                    <div class="row">
                                        <!-- BEGIN SAMPLE TABLE PORTLET-->
                                        <div class="portlet light bordered">
                                            <div class="portlet-title">
                                                <div class="caption font-green-sharp">
                                                    <i class="icon-speech font-green-sharp"></i>
                                                    <span class="caption-subject bold uppercase"> Medicine Item List</span>

                                                </div>
                                            </div>
                                            <div class="portlet-body">
                                                <div class="table-responsive" style="overflow-y:scroll;height:350px;display:block;">
                                                    <table class="table table-striped table-bordered table-hover" id="gridTable">
                                                        <thead>
                                                            <tr>
                                                                <th style="display:none;">
                                                                    Medicine ID
                                                                </th>
                                                                <th>
                                                                    Medicine Name
                                                                </th>
                                                                <th>
                                                                    Company
                                                                </th>
                                                                <th>
                                                                    Medicine Type
                                                                </th>
                                                                <th>
                                                                    Purchase Price
                                                                </th>
                                                                <th>
                                                                    Purchase Qty
                                                                </th>
                                                                <th>
                                                                    Total
                                                                </th>
                                                            </tr>
                                                        </thead>
                                                        <tbody id="gridTableBodyForPurchaseMedicine"></tbody>
                                                    </table>
                                                </div>
                                                <hr />
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="col-md-6 control-label"> <b>Total Quantity</b></label>
                                                            <div class="col-md-6">
                                                                <div class="input-icon">
                                                                    <i>&#2547;</i>
                                                                    <input type="text" class="form-control input-circle" id="TotalQty" readonly="readonly">
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="col-md-6 control-label"><b>Total Purchase Vaule</b></label>
                                                            <div class="col-md-6">
                                                                <div class="input-icon">
                                                                    <i>&#2547;</i>
                                                                    <input type="text" class="form-control input-circle" id="TotalPurchaseValue" readonly="readonly">
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                        <!-- END SAMPLE TABLE PORTLET-->
                                    </div>
                                </div>
                                <!-- END GENERAL PORTLET-->
                                <div class="form-group">
                                    <div class="col-md-4 text-right">
                                    </div>
                                    <div class="col-md-4 text-right">
                                        <button class="btn btn-success" id="save" type="submit"><i class="fa fa-save"></i> Save</button>
                                        <a class="btn btn-danger" id="clear" href="@Url.Action("PurchaseMedicine", "PurchaseMedicine")"><i class="fa fa-cut"></i> Clear</a>
